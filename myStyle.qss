/* 设置QComboBox的背景色和文字颜色 */
QComboBox {
    background-color: #f9f9f9;
    color: #333333; /* 文字颜色 */
    /*border: 1px solid #cccccc;  边框 */
    /*padding: 2px; 内边距 */
}

/* 设置QComboBox的下拉箭头颜色 */
QComboBox:down-arrow {
    background-color: #1c5875;
    image: url(:/down.png);  /*可以使用图片作为箭头 */
    width: 10px; /* 箭头宽度 */
    height: 10px; /* 箭头高度 */
}

/* 鼠标悬停时的样式 */
QComboBox:hover {
    background-color: #1c5875;
}

 /* 设置复选框的对钩颜色 */
QCheckBox:indicator:checked {
    color: white; /* 对钩颜色 */
}

QScrollBar:vertical{
        margin:0px 0px 0px 0px;
        background-color: #454550;
        border:none;
        width:14px;
}

QScrollBar:horizontal{
        margin:0px 0px 0px 0px;
        background-color:#454550;
        border:none;
        height:14px;
}

/* 设置滚动条拖动条的颜色和边距 */
QScrollBar::handle:vertical {
        background: #a9a9a9; /* 设置拖动条颜色 */
        margin: 16px 3px 16px 3px; /* 设置拖动条边距 */
}

/* 设置滚动条拖动条的颜色和边距 */
QScrollBar::handle:horizontal {
        background: #a9a9a9; /* 设置拖动条颜色 */
        margin: 3px 16px 3px 16px; /* 设置拖动条边距 */
}

